@import 'site.styl'
.footer
    display: none
.Bag
    padding 50px 0 40px
    height: 100vh
    min-height: 600px
    overflow: hidden
    &-container
        display flex
        height: 100%
        &.layout
            padding 0
    &-productos
        width 50%
        height: 100%
        overflow-y: auto
        padding 0 20px
        .blocks
            display flex
            align-items: center
            flex-wrap: wrap
            height: 100%
            &-item
                width calc(50% - 10px)
                margin 20px auto
                .Producto
                    height: 100%
                    .img
                        height: calc(100% - 105px)
                        max-height: 600px
                        overflow: hidden
                    .bot
                        display: flex
                        justify-content: space-between
                        .eliminar
                            background: none
                            border none
                            text-decoration: underline
                        .select
                            display: flex
                            align-items: center
                            justify-content: space-between
                            position relative
                            margin-bottom 10px
                            label
                                margin-right: 10px
                            .selected
                                display: flex
                                align-items: center
                                justify-content: space-between
                        .cont
                            margin 5px 0
                            display: flex
                            align-items: center
                            button
                                background: none
                                border none
                                font-size: 12px
                        .talla
                            margin 0px 10px 0 0
                        .tallas
                            flex-direction: column
                            align-items: flex-end
                            margin 0
                            position: absolute
                            background: white
                            padding 5px 0px
                            right 0px
                            top 100%
                            z-index 3
                            display: none
                            width: 100%
                            &.active
                                display flex
                            .talla
                                margin 5px 5px
                        .colors
                            flex-wrap: wrap
                            margin 0
                            position: absolute
                            background: white
                            padding 5px 0px
                            right 0px
                            top 100%
                            display: none
                            width: 100%
                            z-index 3
                            &.active
                                display flex
                            .color
                                margin 5px 3px
    &-data
        width 50%
        height: calc(100% - 106px)
        display flex
        align-items: center
        justify-content: center
        position relative
        padding 0 20px
        &-table
            width 100%
            max-width 400px
            .title
                text-align: center
            .col
                border-bottom 1px solid #000
                padding 20px 30px
                &:nth-child(3)
                    border none
                p
                    font-size: 20px
                    text-align: center
                    margin 0
                    letter-spacing: 0.4em
            .campo
                display: flex
                justify-content: space-between
                align-items: center
            .total
                font-size: 16px
            a
                background #000
                color white
                display block
                text-align: center
                padding 8px
                margin-top: 40px
        .bottom
            width 100%
            display: flex
            flex-wrap: wrap
            align-items: center
            justify-content: space-evenly
            padding: 40px 0
            background: gris
            position absolute
            bottom 0
            transform: translateY(100%)
            a
                color negro
                margin 5px 10px
@media screen and (max-width: 820px)
    .Bag
        &-productos
            .blocks
                &-item
                    width calc(50% - 10px)
                    margin 0 5px
        &-data
            height: calc(100% - 116px)
            .bottom
                padding 20px 0
@media screen and (max-width: 650px)
    .Bag
        &-productos
            .blocks
                &-item
                    width 100%
                    margin 10px 0
        &-data
            &-table
                .col
                    padding 20px 5px
@media screen and (max-width: 420px)
    .Bag
        padding-top 110px
        height: unset
        &-container
            flex-wrap: wrap-reverse
        &-productos
            width 100%
            margin 20px 0
            .blocks
                &-item
                    width calc(50% - 10px)
                    margin 0 5px
        &-data
            width 100%
            flex-direction: column
            .bottom
                position: unset
                transform: unset
