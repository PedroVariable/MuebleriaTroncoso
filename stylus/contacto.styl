@import  'site.styl';

.contacto
    &-banner
        background-size: cover;
        background-image: url("/IMAGENES/banner.jpg");
        text-align: center
        padding: 145px 0
        h1
            font-size: 36px
            font-weight: 700
            color gris
            margin: 0
            letter-spacing: 15px
            font-family: mulish
    &-queremos
        padding: 80px 0 50px 0
        &-contenido
            max-width: 650px
            margin: 0 auto 
            padding: 0 20px
            h2,p
                font-size: 28px
                font-weight: 400
                font-size: mulish
                text-align: center
            p
                font-size: 14px
            h2
                max-width: 450px
                margin: 0 auto
            &-form
                padding-top: 30px
                max-width: 400px
                margin: 0 auto
                form
                    position relative
    &-tienda
        display: flex
        justify-content: space-between
        align-items: center
        padding: 160px 0 140px 0
        &-imagen
            width 60%
            img
                display: block
                width 100%
        &-text
            width 40%
            text-align: center
            .text
                h4
                    font-size: 16px
                    font-weight: 700
                a
                    color negro
                    font-size: 16px
                    font-weight: 400
                    font-family: tajawal


@media screen and (max-width 1000px)
    .contacto
        &-tienda
            flex-wrap: wrap-reverse
            padding 60px 0 100px 0
            &-imagen
            &-text
                width 100%
            &-imagen
                max-width: 500px
                margin: 0 auto
                padding-top: 50px


@media screen and (max-width 600px)
    .contacto
        &-banner 
            h1
                font-size: 25px
                letter-spacing: 10px      
        &-queremos
            &-contenido 
                h2
                    font-size: 22px
