@import 'site.styl'
html
    &.active
        overflow-y: hidden

.filtros
    position: fixed
    width: 100%
    height: 100vh
    background: #0000005f
    z-index: 9
    top: 0
    left: -100%
    transition: all 0.5s ease;
    &.active
        left 0
    .cerrar
        position fixed
        right 0
        top: 0
        height 100vh
        width calc(100% - 440px)
    &-container
        background: white
        width  440px
        height: 100vh
        padding 70px 40px
        overflow: auto
        .col
            border-bottom 1px solid #000
            padding 10px 5px 40px
            h5
                font-size: 14px
                font-weight: 400
            .item
                display: flex
                align-items: center
                margin 10px 0
                .checkbox
                    position relative
                    margin-right: 10px
                    input
                        position: absolute
                        opacity 0
                    .sq
                        display: block
                        width 15px
                        height: 15px
                        border 2px solid gris
                        background: gris
                        &.ac
                            background: #000
                    input[type=checkbox]:checked + .sq
                        background: #000
            .tallas
                display: flex
                .talla
                    position relative
                    margin 5px
                    width 30px
                    height: 30px
                    &:hover
                        border 2px solid #000
                    label
                        display: flex
                        align-items: center
                        justify-content: center
                        text-align: center
                        border 1px solid gris-oscuro
                        width: 100%
                        height: 100%
                    input
                        position: absolute
                        opacity 0
                    input[type=checkbox]:checked + label
                        border 2px solid #000

.Catalogo
    //padding-top 117px
    &-banner
        .item
            img
                width 100%
                display block
    &-content
        padding 50px 0
        .catalogo-actions
            display: flex
            justify-content: space-between
            align-items: center
            margin 30px 0
            .btnFiltros
                font-size: 14px
                font-weight: 500
                border 1px solid gris-oscuro
                padding 3px 20px
                cursor pointer
            p
                margin 0
        .blocks
            display: flex
            align-items: center
            flex-wrap: wrap
            
            &-item
                width calc(25% - 20px)
                margin-right: 15px
                .Producto
                    height: 100%
                    .img
                        height: calc(100% - 105px)
                    .bot
                        width 200px
               
@media screen and (max-width: 600px)
    .Catalogo
        &-content
            .blocks
                &-item
                    grid-column: span 6;
                    grid-row: span 3;
                    &:nth-child(18n + 1)
                        grid-column: span 6;
                        grid-row: span 3;
                    &:nth-child(18n + 12)
                        grid-column: span 6;
                        grid-row: span 3;
                    &:nth-child(10n + 1)
                        grid-column: span 6;
                        grid-row: span 6;
                    &:nth-child(10n + 7)
                        grid-column: span 6;
                        grid-row: span 6;
