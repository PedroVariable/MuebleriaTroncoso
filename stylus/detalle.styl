@import 'site.styl'

.Detalle
    padding: 50px 0
    &-producto
        &-container
            display flex
            width 100%
            max-width: 1740px
            margin 0 auto
            .images
                display: flex
                width 60%
                .list
                    padding 0 20px
                    width 20%
                    .img
                        padding-bottom: 20px
                        &:last-child
                            padding 0
                        img
                            max-width: 150px

                .open
                    width 70%
                    .img
                        padding 0
                        img
                            width 100%
                            display: block
                .img
                    img
                        width 100%
                        display: block
            .text
                width 40%
                padding 20px 30px 0
                .heart
                    margin-left: auto
                    display block
                    max-width: max-content
                    font-size: 20px
                    cursor pointer
                    background: none
                    border none
                h1
                    font-weight: 500
                    font-size: 36px
                    margin-top 50px
                .price
                    font-size: 24px
                    font-weight: 700
                .campo
                    margin 40px 0
                    p
                        font-size: 12px
                        font-weight: 700
                        margin 0
                .colors
                    display: flex
                    margin-top 10px
                    .color
                        display: block
                        width 12px
                        height: 12px
                        border-radius: 50%
                        margin 0 10px 0 0
                .tallas
                    display: flex
                    .talla
                        position relative
                        margin 5px
                        width 30px
                        height: 30px
                        &:hover
                            border 2px solid #000
                        label
                            display: flex
                            align-items: center
                            justify-content: center
                            text-align: center
                            border 1px solid gris-oscuro
                            width: 100%
                            height: 100%
                        input
                            position: absolute
                            opacity 0
                        input[type=checkbox]:checked + label
                            border 2px solid #000
                .agregar
                    display flex
                    align-items: center
                    p
                        font-size: 12px
                        font-weight: 400
                        margin 0 10px
                    .checkbox
                        position relative
                        margin-right: 10px
                        input
                            position: absolute
                            opacity 0
                        .sq
                            display: block
                            width 15px
                            height: 15px
                            border 2px solid gris
                            background: gris
                            &.ac
                                background: #000
                        input[type=checkbox]:checked + .sq
                            background: #000
                form
                    margin 20px 0
                    max-width: 250px
                    display: none
                    .input
                        display: flex
                        align-items: flex-end
                        justify-content: space-between
                        padding-bottom: 10px
                        input
                            max-width: 130px
                            border-bottom 1px solid gris-oscuro
                            padding 0 5px
                .data
                    margin 20px 0 40px
                    .titulo
                        font-size: 12px
                        font-weight: 700
                        border-bottom 1px solid gris-oscuro
                        padding 15px 20px
                        h3
                            margin 0
                    .txt
                        background: gris
                        padding 15px 20px
                        display none
                        .cols
                            display flex
                            flex-wrap: wrap
                            .img
                                padding 5px
                                img
                                    width 100%
                .tiempo
                    background: gris
                    padding 10px
                    text-align: center
                    margin 20px 0
                .btn-negro
                    display block
                    background: negro
                    border none
                    border-radius: unset
                    color white
                    width 100%
                    padding 10px 0
    &-recomendaciones
        &-container
            width 100%
            max-width: 1740px
            margin 0 auto
            padding 0 20px
            p
                font-size: 14px
                text-align: center
            .flex
                display: flex
                align-items: center
                justify-content: center
                margin 20px 0 40px
                .title
                    margin 0 20px
                .icon
                    background: none
                    border none
                    font-size: 20px
            .carrousel
                display flex
                .item
                    width calc(25% - 40px)
                    margin 0 20px
                    .img
                        img
                            width 100%
                            display: block
                    h3
                        text-align: center
                        font-size: 20px
                        font-weight: light
@media screen and (max-width: 890px)
    .Detalle
        &-producto
            &-container
                flex-wrap: wrap
                justify-content: center
                .text
                    width 100%
                .images
                    width 100%
                    padding 0 20px
@media screen and (max-width: 600px)
    .Detalle
        &-producto
            &-container
                .images
                    flex-direction: column-reverse
                    .list
                        width 100%
                        padding 0
                        .slick
                            &-track
                                display flex
                                justify-content: space-between
                                transform: none !important
                                width 100% !important
                            &-list
                                padding: 0 !important
                        .img
                            padding 5px 10px
                            &:last-child
                                padding: 5px 10px

                    .open
                        width 100%
@media screen and (max-width: 460px)
    .Detalle
        &-producto
            &-container
                padding 0 20px
                .text
                    padding 20px 0
        &-recomendaciones
            &-container
                .flex
                    .title
                        font-size: 18px
