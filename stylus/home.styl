@import 'site.styl'

.Home
    &-banner
        .item
            img
                width 100%
                display: block
    &-colecciones
        padding 50px 0
        &-container
            p
                font-size: 14px
                text-align: center
            .flex
                display: flex
                align-items: center
                justify-content: center
                margin 20px auto 40px
                position relative
                max-width: max-content
                .slick-arrow
                    height: 100%
                    width auto
                    align-items: center
                    background none
                    color #000
                    position absolute
                    cursor pointer
                    z-index: 1
                    border: none
                    &.slick-next
                        right -35px
                    &.slick-prev
                        left -40px
                    &:before
                        font-family: MUEBLES TRONCOSO !important
                        font-size: 16px !important
                        color #000 !important
            .carrousel-colecciones
                display flex
                .item
                    width calc(25% - 20px)
                    margin 0 10px
                    display: block
                    .img
                        img
                            width 100%
                            display: block
                    h3
                        text-align: center
                        font-size: 20px
                        font-weight: light
    &-favorites
        padding 50px 0
        &-container
            text-align: center
            .blocks
                display: grid;
                grid-template-columns: repeat(4, 1fr);
                grid-template-rows: repeat(2, 1fr);
                grid-gap: 15px;
                margin 50px 0 80px
                &-item
                    .Producto
                        height: 100%
                        .img
                            height: calc(100% - 105px)
                        .bot
                            width 105px
                    &:first-child
                        grid-column: span 2;
                        grid-row: span 2;
            .link
                background: gris
                font-size: 14px
                font-weight: 700
                padding 8px 30px
                color#000
                display: block
                max-width: max-content
                margin 0 auto
                transition all 0.3s
                &:hover
                    background: #000
                    color white
    &-renta
        height: 60vh
        min-height: 400px
        display: flex
        align-items: center
        justify-content: center
        background-size: cover !important
        background-repeat: no-repeat !important
        background-position: top  !important
        padding 0 20px
        .col
            width 50%
            display: flex
            flex-direction: column
            align-items: center
            p
                font-size: 24px
            a
                font-size: 14px
                color white
                background: #000
                display block
                max-width: max-content
                padding 5px 40px
            span
                font-size: 13px
                font-style: italic
                margin 15px 0
                display: block
    &-esenciales
        padding 100px 0 50px
        &-container
            width 100%
            max-width: 1920px
            margin 0 auto
            text-align: center
            .txt
                margin 30px 0 50px
                p
                    font-size: 24px
                    font-weight: light
            .blocks
                display: grid;
                grid-template-columns: 1fr 1fr 1fr;
                grid-template-rows: auto;
                grid-auto-flow: column;
                grid-gap: 20px;
                &-item
                    position relative
                    display: block
                    &:nth-child(5n+3)
                        grid-row-end: span 2;
                    img
                        width 100%
                        height 100%
                        object-fit: cover
                    .text
                        position: absolute
                        bottom 30px
                        left 12%
                        text-align: left
                        h3
                            font-size: 25px
                            margin 0
                        p
                            font-size: 14px
                            margin 8px 0
    &-suscribete
        padding 50px 0
        &-container
            text-align: center
            .blocks
                display flex
                align-items: center
                background: gris
                margin 50px 0
                padding: 30px 0 50px
                .col
                    width 50%
                    img
                        width 100%
                        height: 100%
                        object-fit: cover
                        display: block
                    form
                        text-align: left
                        max-width: 400px
                        margin 0 auto
                        h3
                            font-size: 25px
                            font-weight: light
                            letter-spacing: 0.4em;
                            margin 0
                        p
                            margin 10px 0
                        .input
                            margin 20px 0
                            label
                                margin 10px 0 20px
                                display block
                            input
                                background: none
                                border none
                                border-bottom 1px solid #000
                                display block
                                width 100%
                                font-size: 15px
                                padding 3px
                                font-family: mulish
                        button
                            background: #000
                            border none
                            border-radius: none
                            color white
                            display: block
                            padding 8px
                            width: 100%
                            max-width: 200px
    &-insta
        padding 50px 0
        &-container
            width 100%
            max-width: 1840px
            padding 0 20px
            margin 0 auto
            p
                font-size: 20px
                font-weight: 300
            h2
                font-size: 25px
            .btns
                display: flex
                justify-content: flex-end
                margin 30px 0
                position relative
                .slick-arrow
                    height: 100%
                    width auto
                    align-items: center
                    background none
                    color #000
                    position absolute
                    cursor pointer
                    z-index: 1
                    border: none
                    position: unset
                    margin 0 10px
                    transform none
                    &:before
                        font-family: MUEBLES TRONCOSO !important
                        font-size: 25px !important
                        color #000 !important
            .blocks
                display flex
                justify-content: space-between
                &-item
                    width calc(100% / 3 - 30px)
                    padding 0 15px
                    img
                        width 100%
@media screen and (max-width: 780px)
    .Home
        &-renta
            flex-direction: column
            justify-content: center
            .col
                text-align: center
                width 100%
        &-esenciales
            &-container
                .blocks
                    grid-template-columns: repeat(6, 1fr)
                    grid-auto-rows: 70px
                    grid-auto-flow: row
                    grid-gap: 15px;
                    &-item
                        grid-column: span 3;
                        grid-row: span 3;
                        .text
                            h3
                                font-size: 18px
                            p
                                font-size: 11px
                        &:nth-child(3)
                            grid-column: span 6;
                            grid-row: span 3;
@media screen and (max-width: 780px)
    .Home
        &-favorites
            &-container
                .blocks
                    &-item
                        grid-column: span 2;
                        grid-row: span 2;
@media screen and (max-width: 420px)
    .Home
        &-favorites
            &-container
                .blocks
                    margin 50px 0 25px
        &-esenciales
            &-container
                .blocks
                    &-item
                        .text
                            bottom 7px
                            left 10%
